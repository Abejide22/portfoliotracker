<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Accounts</title>
  <link rel="stylesheet" href="accounts_style.css">
  <link href="shared_components.css" rel="stylesheet"> <!-- Linker til en ekstern CSS-fil for at style siden -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

<body>
  <!-- Top Bar -->
  <%- include('partials/topbar') %>

  <!-- Side Navigation -->
  <%- include('partials/sidebar') %>

  <!-- Main Content -->
  <div id="mainContent">
    <!-- Kontooversigt -->
    <div id="accountsContainer">
      <h2>Kontooversigt</h2>
      <% if (accounts.length === 0) { %>
        <div class="account">
          <h3>Ingen konti oprettet endnu.</h3>
          <p>Opret din første konto nedenfor.</p>
        </div>
        <% } else { %>
          <% accounts.forEach(account=> { %>
            <div class="account">
              <h3>Konto Navn: <%= account.name %>
              </h3>
              <hr>
              <p>Valuta: <%= account.currency %>
              </p>
              <p>Saldo: <%= account.balance %>
                  <%= account.currency %>
              </p>
              <p>Oprettet: <%= account.created_at.toISOString().split('T')[0] %>
              </p>
              <p>Bank: <%= account.bank %>
              </p>
              <% if (account.closed_at) { %>
                <p style="color:red;">Kontoen er lukket den <%= account.closed_at.toISOString().split("T")[0] %>
                </p>
                <% } %>
                  <% if (!account.closed_at) { %>
                    <!-- Indbetalingsformular. -->
                    <form action="/deposit" method="POST" style="display:inline;">
                      <input type="hidden" name="accountId" value="<%= account.id %>">
                    
                      <input type="number" name="amount" placeholder="Beløb" required style="border-top-right-radius: 0px; border-bottom-right-radius: 0px;">
                      <button type="submit" class="deposit-account" style="border-top-right-radius: 5px; border-bottom-right-radius: 5px;">Indbetal</button>
                    </form>
                    <!-- Udbetalingsformular. -->
                    <form action="/withdraw" method="POST" style="display:inline;">
                      <input type="hidden" name="accountId" value="<%= account.id %>">
                      <input type="number" name="amount" placeholder="Beløb" step="0.01" required style="border-top-right-radius: 0px; border-bottom-right-radius: 0px;">
                      <button type="submit" class="withdraw-account" style="border-top-right-radius: 5px; border-bottom-right-radius: 5px;">Udbetal</button>
                    </form>
                    <% } %>
                      <form action="/close-account" method="POST" style="display:inline;">
                        <input type="hidden" name="accountId" value="<%= account.id %>">
                        <button type="submit" class="close-account" style="border-radius: 5px;">Luk Konto</button>
                      </form>
                      <form action="/reopen-account" method="POST" style="display:inline;">
                        <input type="hidden" name="accountId" value="<%= account.id %>">
                        <button type="submit" class="reopen-account" style="border-radius: 5px;">Genåbn Konto</button>
                      </form>
                      <!-- Se transaktioner-knap -->
                      <form action="/transactions" method="GET" style="display:inline;">
                        <input type="hidden" name="accountId" value="<%= account.id %>">
                        <br><br>
                        <button type="submit" style="border-radius: 5px;">Se transaktioner</button>
                      </form>
            </div>
            <% }) %>
              <% } %>
    </div>

    <!-- Opret ny konto -->
    <div id="createAccountContainer">
      <h2>Opret ny konto</h2>
      <form action="/create-account" method="POST">
        <input type="hidden" name="userId" value="<%= userId %>">
        <label>Kontonavn:</label>
        <input type="text" name="name" required>
        <label>Valuta:</label>
        <select name="currency" required>
          <option value="">Vælg valuta</option>
          <option value="DKK">DKK</option>
          <option value="USD">USD</option>
          <option value="EUR">EUR</option>
        </select>
        <label>Banknavn:</label>
        <input type="text" name="bank" required>
        <button type="submit">Opret Konto</button>
      </form>
    </div>
  </div>
  <script>
    const logoutForm = document.querySelector('form[action="/logout"]'); // Finder logout-formularen
  
    if (logoutForm) {
      logoutForm.addEventListener("submit", function (event) { // Denne del af kdoen fortæller browseren, at den skal vente på, at brugeren trykker på knappen
        const confirmed = confirm("Er du sikker på, at du vil logge ud?"); // Viser en bekræftelsesdialog
        if (!confirmed) {
          event.preventDefault(); // Forhindrer formularen i at blive sendt, hvis brugeren klikker på "Annuller"
        }
      });
    }
  </script>
</body>

</html>