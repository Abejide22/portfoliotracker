<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio Overview</title>
    <link rel="stylesheet" href="portfolios_style.css">
    <link href="shared_components.css" rel="stylesheet"> <!-- Linker til en ekstern CSS-fil for at style siden -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>

<body>
    <!-- Top Bar og logout knap -->
    <%- include('partials/topbar') %>

    <!-- Side navigation -->
    <%- include('partials/sidebar') %>

    <div class="container">
        <div class="header">
            <h2>Portfolios</h2>
            <a href="/addportfolio" class="primary-btn" style="text-decoration: none; color: white;">
                <span class="material-symbols-outlined">add</span> Tilføj Portefølje
            </a>
        </div>


        <div class="grid-3">
            <div class="stacked">
                <div class="card">
                    <h3>Total værdi i DKK</h3>
                    <h2><%= typeof totalValue === 'number' ? totalValue.toFixed(2) : "0.00" %> DKK</h2>
                </div>
                <div class="card">
                    <h3>Ændring sidste 30 dage</h3>
                    <h2><%= typeof ændring30dage === 'number' ? ændring30dage.toFixed(2) : "0.00" %>%</h2>
                </div>
            </div>
            <div class="card">
                <h3>Fordeling af værdi i porteføljer</h3>
                <div id="chart"></div>
            </div>
        </div>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Portefølje Navn</th>
                        <th>Samlet erhvervelsespris</th>
                        <th>Samlet forventet værdi</th>
                        <th>Urealiseret gevinst</th>
                    </tr>
                </thead>
                <tbody>
                    <% portfolios.forEach(portfolio=> { %>
                        <tr>
                            <td>
                                <%= portfolio.name %>
                            </td>
                            <td>
                                <%= typeof portfolio.samletKøbspris==="number" ? portfolio.samletKøbspris.toFixed(2)
                                    : "0.00" %> DKK
                            </td>
                            <td>
                                <%= typeof portfolio.samletForventetVærdi==="number" ?
                                    portfolio.samletForventetVærdi.toFixed(2) : "0.00" %> DKK
                            </td>
                            <td>
                                <%= typeof portfolio.urealiseretGevinst==="number" ?
                                    portfolio.urealiseretGevinst.toFixed(2) : "0.00" %> DKK
                            </td>
                        </tr>

                        <% if (portfolio.stocks.length> 0) { %>
                            <tr>
                                <td colspan="4">
                                    <table style="width: 100%; background-color: #333; margin-top: 10px;">
                                        <thead>
                                            <tr>
                                                <th>Aktie ID</th>
                                                <th>Samlet antal aktier</th>
                                                <th>Samlet erhvervelsespris</th>
                                                <th>GAK</th>
                                                <th>Forventet værdi</th>
                                                <th>Urealiseret gevinst/tab</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% portfolio.stocks.forEach(stock=> { %>
                                                <tr>
                                                    <td>
                                                        <%= stock.stockId %>
                                                    </td>
                                                    <td>
                                                        <%= stock.samletAntal %>
                                                    </td>
                                                    <td>
                                                        <%= typeof stock.samletKøbspris==="number" ?
                                                            stock.samletKøbspris.toFixed(2) : "0.00" %> DKK
                                                    </td>
                                                    <td>
                                                        <%= typeof stock.gak==="number" ? stock.gak.toFixed(2) : "0.00"
                                                            %> DKK
                                                    </td>
                                                    <td>
                                                        <%= typeof stock.forventetVærdi==="number" ?
                                                            stock.forventetVærdi.toFixed(2) : "0.00" %> DKK
                                                    </td>
                                                    <td>
                                                        <%= typeof stock.urealiseretGevinst==="number" ?
                                                            stock.urealiseretGevinst.toFixed(2) : "0.00" %> DKK
                                                    </td>
                                                </tr>
                                                <% }) %>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            <% } else { %>
                                <tr>
                                    <td colspan="4" style="text-align: center; padding: 10px; color: gray;">
                                        Der er endnu ingen aktier i denne portefølje.
                                    </td>
                                </tr>
                                <% } %>
                                    <% }) %>
                </tbody>

</html>

<script>
   const chartOptions = {
        chart: {
            type: 'pie',
            fontFamily: 'normalSkrift'
        },
        series: [
            <% if (portfolios[0] && portfolios[0].stocks.length > 0) { %>
                <% portfolios[0].stocks.forEach((stock, index) => { %>
                    <%= stock.forventetVærdi.toFixed(2) %><%= index !== portfolios[0].stocks.length - 1 ? ',' : '' %>
                <% }) %>
            <% } else { %>0<% } %>
        ],
        labels: [
            <% if (portfolios[0] && portfolios[0].stocks.length > 0) { %>
                <% portfolios[0].stocks.forEach((stock, index) => { %>
                    '<%= stock.stockId %>'<%= index !== portfolios[0].stocks.length - 1 ? ',' : '' %>
                <% }) %>
            <% } else { %>'Ingen aktier'<% } %>
        ],
        colors: ['#00BFFF', '#9932CC', '#FFA500', '#90EE90', '#FF4040'],
        stroke: {
            show: false
        },
        legend: {
            position: 'right',
            labels: {
                colors: '#ffffff',
                useSeriesColors: false,
                fontSize: '14px',
                fontFamily: 'normalSkrift'
            }
        },
        dataLabels: {
            style: {
                colors: ['#ffffff'],
                fontFamily: 'normalSkrift',
                fontWeight: 'normal'
            }
        }
    };

    const chart = new ApexCharts(document.querySelector("#chart"), chartOptions);
    chart.render();
</script>

</html>

<script>
    const logoutForm = document.querySelector('form[action="/logout"]');
    if (logoutForm) {
        logoutForm.addEventListener("submit", function (event) {
            const confirmed = confirm("Er du sikker på, at du vil logge ud?");
            if (!confirmed) {
                event.preventDefault(); // Stopper formularen
            }
        });
    }
</script>