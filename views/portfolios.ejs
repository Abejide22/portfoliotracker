<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Portfolio Overview</title>
    <link rel="stylesheet" href="portfolios_style.css">
    <link href="shared_components.css" rel="stylesheet"> <!-- Linker til en ekstern CSS-fil for at style siden -->
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
</head>

<body>
    <!-- Top Bar og logout knap -->
    <%- include('partials/topbar') %>

        <!-- Side navigation -->
        <%- include('partials/sidebar') %>

            <div class="container">
                <div class="header">
                    <h2>Portfolios</h2>
                    <a href="/addportfolio" class="primary-btn" style="text-decoration: none; color: white;">
                        <span class="material-symbols-outlined">add</span> Tilføj Portefølje
                    </a>
                </div>


                <div class="grid-3">
                    <div class="stacked">
                        <div class="card">
                            <h3>Total værdi i DKK</h3>
                            <h2>
                                <% if (typeof totalVærdi==="number" ) { %>
                                    <%= totalVærdi.toFixed(2) %>
                                        <% } else { %>
                                            0.00
                                            <% } %>
                            </h2>
                        </div>

                        <div class="card">
                            <h3>Ændring sidste 30 dage</h3>
                            <h2>
                                <% if (typeof ændring30dage==="number" ) { %>
                                    <%= ændring30dage.toFixed(2) %>%
                                        <% } else { %>
                                            0.00%
                                            <% } %>
                            </h2>
                        </div>
                    </div>

                    <div class="card">
                        <h3>Fordeling af værdi i porteføljer</h3>
                        <div id="chart"></div>
                    </div>
                </div>

                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Portefølje Navn</th>
                                <th>Samlet erhvervelsespris</th>
                                <th>Samlet forventet værdi</th>
                                <th>Urealiseret gevinst</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% portfolios.forEach(function(portfolio) { %>
                                <tr>
                                    <td>
                                        <a href="#" onclick='åbnModal(<%- JSON.stringify(portfolio) %>)'
                                            style="color: white; text-decoration: underline; cursor: pointer;">
                                            <%= portfolio.name %>
                                        </a>
                                    </td>

                                    <td>
                                        <% if (typeof portfolio.samletKøbspris==="number" ) { %>
                                            <%= portfolio.samletKøbspris.toFixed(2) %> DKK
                                                <% } else { %>
                                                    0.00 DKK
                                                    <% } %>
                                    </td>

                                    <td>
                                        <% if (typeof portfolio.samletForventetVærdi==="number" ) { %>
                                            <%= portfolio.samletForventetVærdi.toFixed(2) %> DKK
                                                <% } else { %>
                                                    0.00 DKK
                                                    <% } %>
                                    </td>

                                    <td>
                                        <% if (typeof portfolio.urealiseretGevinst==="number" ) { %>
                                            <%= portfolio.urealiseretGevinst.toFixed(2) %> DKK
                                                <% } else { %>
                                                    0.00 DKK
                                                    <% } %>
                                    </td>
                                </tr>

                                <% if (portfolio.stocks && portfolio.stocks.length> 0) { %>
                                    <tr>
                                        <td colspan="4">
                                            <table class="nested-stock-table">
                                                <thead>
                                                    <tr>
                                                        <th>Aktie ID</th>
                                                        <th>Samlet antal aktier</th>
                                                        <th>Samlet erhvervelsespris</th>
                                                        <th>GAK</th>
                                                        <th>Forventet værdi</th>
                                                        <th>Urealiseret gevinst/tab</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% portfolio.stocks.forEach(function(stock) { %>
                                                        <tr>
                                                            <td>
                                                                <%= stock.stockId %>
                                                            </td>
                                                            <td>
                                                                <%= stock.samletAntal %>
                                                            </td>

                                                            <td>
                                                                <% if (typeof stock.samletKøbspris==="number" ) { %>
                                                                    <%= stock.samletKøbspris.toFixed(2) %> DKK
                                                                        <% } else { %>
                                                                            0.00 DKK
                                                                            <% } %>
                                                            </td>

                                                            <td>
                                                                <% if (typeof stock.gak==="number" ) { %>
                                                                    <%= stock.gak.toFixed(2) %> DKK
                                                                        <% } else { %>
                                                                            0.00 DKK
                                                                            <% } %>
                                                            </td>

                                                            <td>
                                                                <% if (typeof stock.forventetVærdi==="number" ) { %>
                                                                    <%= stock.forventetVærdi.toFixed(2) %> DKK
                                                                        <% } else { %>
                                                                            0.00 DKK
                                                                            <% } %>
                                                            </td>

                                                            <td>
                                                                <% if (typeof stock.urealiseretGevinst==="number" ) { %>
                                                                    <%= stock.urealiseretGevinst.toFixed(2) %> DKK
                                                                        <% } else { %>
                                                                            0.00 DKK
                                                                            <% } %>
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                        </td>
                                    </tr>
                                    <% } else { %>
                                        <tr>
                                            <td colspan="4" class="no-stocks-message">
                                                Der er endnu ingen aktier i denne portefølje.
                                            </td>
                                        </tr>
                                        <% } %>
                                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <div id="modal"
                    style="display:none; position:fixed; top:0; left:0; width:100%; height:100%; background: rgba(0,0,0,0.9); z-index:1000; overflow:auto;">
                    <div id="modal-content"
                        style="position:relative; margin:auto; top:50px; width:90%; background-color: #1e1e2f; padding:20px; border-radius:8px; color:white;">
                        <h2 id="modal-title"></h2>
                        <div id="modal-chart"
                            style="height:400px; margin-top: 20px; font-size: 18px; color: #ffffff; text-align: center;">
                        </div>
                        <button onclick="lukModal()"
                            style="margin-top: 20px; padding: 10px 20px; background-color: #6a0dad; color: white; border: none; border-radius: 5px; cursor: pointer;">Luk</button>
                    </div>
                </div>

</html>

<script>
    const førstePortefølje = <% - JSON.stringify(portfolios[0] || {}) %>;

    let pieSeries = [];
    let pieLabels = [];

    if (førstePortefølje.stocks && førstePortefølje.stocks.length > 0) {
        for (let i = 0; i < førstePortefølje.stocks.length; i++) {
            const stock = førstePortefølje.stocks[i];

            // Tilføj label
            pieLabels.push(stock.stockId);

            // Tilføj værdi (hvis tal, ellers 0)
            if (typeof stock.forventetVærdi === "number") {
                pieSeries.push(parseFloat(stock.forventetVærdi.toFixed(2)));
            } else {
                pieSeries.push(0);
            }
        }
    } else {
        pieSeries = [0];
        pieLabels = ['Ingen aktier'];
    }

    const chartOptions = {
        chart: {
            type: 'pie',
            fontFamily: 'normalSkrift'
        },
        series: pieSeries,
        labels: pieLabels,
        colors: ['#00BFFF', '#9932CC', '#FFA500', '#90EE90', '#FF4040'],
        stroke: {
            show: false
        },
        legend: {
            position: 'right',
            labels: {
                colors: '#ffffff',
                useSeriesColors: false,
                fontSize: '14px',
                fontFamily: 'normalSkrift'
            }
        },
        dataLabels: {
            style: {
                colors: ['#ffffff'],
                fontFamily: 'normalSkrift',
                fontWeight: 'normal'
            }
        }
    };

    const chart = new ApexCharts(document.querySelector("#chart"), chartOptions);
    chart.render();
</script>

</html>

<script>
    const logoutForm = document.querySelector('form[action="/logout"]');
    if (logoutForm) {
        logoutForm.addEventListener("submit", function (event) {
            const confirmed = confirm("Er du sikker på, at du vil logge ud?");
            if (!confirmed) {
                event.preventDefault(); // Stopper formularen
            }
        });
    }

    function åbnModal(portfolio) {
        document.getElementById('modal').style.display = 'block';
        document.getElementById('modal-title').innerText = "Udvikling for portefølje: " + portfolio.name;

        // Fjern gammel graf hvis der findes en
        document.getElementById('modal-chart').innerHTML = "";

        if (!portfolio.stocks || portfolio.stocks.length === 0) {
            document.getElementById('modal-chart').innerHTML = "<div style='font-size: 18px; color: #ffffff; text-align: center;'>Ingen aktier i denne portefølje.</div>";
            return;
        }

        const labels = portfolio.stocks.map(stock => stock.stockId);
        const data = portfolio.stocks.map(stock => stock.forventetVærdi);

        const options = {
            chart: {
                type: 'bar',
                height: 350
            },
            series: [{
                name: 'Værdi',
                data: data
            }],
            xaxis: {
                categories: labels
            }
        };

        const chart = new ApexCharts(document.querySelector("#modal-chart"), options);
        chart.render();
    }

    function lukModal() {
        document.getElementById('modal').style.display = 'none';
    }
</script>