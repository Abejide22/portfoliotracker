      </div>
</body>
</html>

<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>

<script>
  const xValues = [100,200,300,400,500,600,700,800,900,1000];
  
  new Chart("myChart", 
  {
    type: "line",
    data: {
      labels: xValues,
      datasets: [{
        data: [100,121,99,143,130,132,129,154,76,100],
        borderColor: "blue",
        fill: false
      }]
    },
    options: 
    {
      legend: {display: false}
    }
  });

  new Chart("myChart2", 
  {
    type: "line",
    data: {
      labels: xValues,
      datasets: [{
        data: [110,91,109,83,90,72,89,110,130,99],
        borderColor: "blue",
        fill: false
      }]
    },
    options: 
    {
      legend: {display: false}
    }
  });
  </script>