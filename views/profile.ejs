<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portfoliotracker - Market</title>
  <link href="profile_style.css" rel="stylesheet">
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
</head>

</html>

<body>
  <div id="topBar_id">
    <h1>PORTFOLIOTRACKER</h1>
    <form action="/logout" method="POST" style="display: inline;">
      <button type="submit" id="logoutButton" title="Log ud">
        <span class="material-symbols-outlined">
          account_circle_off
        </span>
      </button>
    </form>
  </div>

  <ul>
    <li><a href="/dashboard"><span class="material-symbols-outlined">dashboard</span>Dashboard</a></li>
    <li><a href="/portfolios"><span class="material-symbols-outlined">folder_open</span>Portfolios</a></li>
    <li><a href="/trade"><span class="material-symbols-outlined">query_stats</span>Market</a></li>
    <li><a href="/accounts"><span class="material-symbols-outlined">account_balance_wallet</span>Accounts</a></li>
    <li><a href="/profile" style="color: gray;"><span class="material-symbols-outlined"
          style="color: gray;">person</span>Profile</a></li>
  </ul>

  <div id="profileBox_id">
    <h2 id="profiloplysninger_id">Profiloplysninger</h2>
    <hr>
    <input placeholder="e-mail" style="width: 310px;">
    <br>
    <input placeholder="Brugernavn" id="brugernavn_id">
    <input placeholder="Adgangskode" id="adgangskode_id">
  </div>
  <script>
    document.getElementById('gemÆndringer_id').addEventListener('click', async () => {
      const userId = document.getElementById('userId').value;
      const newPassword = document.getElementById('newPassword').value;
      const confirmPassword = document.getElementById('confirmPassword').value;

      // Tjek om adgangskoderne matcher og har mindst 4 tegn
      const messageElement = document.getElementById('message');

      if (newPassword.length < 4) {
        messageElement.style.color = 'red';
        messageElement.textContent = 'Adgangskoden skal være mindst 4 tegn lang.';
        return; // Stop processen, hvis adgangskoden er for kort
      }
      if (newPassword !== confirmPassword) {
        messageElement.style.color = 'red';
        messageElement.textContent = 'Adgangskoderne matcher ikke.';
        return; // Stop processen, hvis adgangskoderne ikke matcher
      }

      // Send PUT-anmodning til serveren
      const response = await fetch('/profile/update-password', {
        method: 'PUT',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ userId, newPassword, confirmPassword }),
      });

      const result = await response.json();

      if (response.ok) {
        messageElement.style.color = 'green';
        messageElement.textContent = result.success;
      } else {
        messageElement.style.color = 'red';
        messageElement.textContent = result.error;
      }
    });
  </script>



</body>